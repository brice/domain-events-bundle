<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Headsnet\DomainEventsBundle\Domain\Model\StoredEvent" table="event">

        <id name="eventId" type="integer">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="occurredOn" type="datetime"/>

        <field name="publishedOn" type="datetime" nullable="true"/>

        <field name="typeName" length="255"/>

        <field name="eventBody" type="text"/>

    </entity>

</doctrine-mapping>
